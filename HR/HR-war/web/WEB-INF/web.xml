    <servlet>
        <servlet-name>PositionListServlet</servlet-name>
        <servlet-class>servlets.PositionListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PositionListServlet</servlet-name>
        <url-pattern>/positions</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>JDBCRealm</realm-name>
        <form-login-config>
            <form-login-page>/index.jsp</form-login-page>
            <form-error-page>/WEB-INF/pages/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
